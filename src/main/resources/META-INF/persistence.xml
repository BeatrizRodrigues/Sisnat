<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="SisnatPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.animal.Arachnida</class>
    <class>model.animal.MorfometriaMammalia</class>
    <class>model.animal.Amphibia</class>
    <class>model.animal.MorfometriaArachnida</class>
    <class>model.animal.MorfometriaAves</class>
    <class>model.animal.MorfometriaReptilia</class>
    <class>model.animal.Ave</class>
    <class>model.animal.EcdiseArachnida</class>
    <class>model.animal.Observacao</class>
    <class>model.animal.Mammalia</class>
    <class>model.animal.Alimentacao</class>
    <class>model.animal.Animal</class>
    <class>model.animal.MorfometriaAmphibia</class>
    <class>model.animal.FichaClinica</class>
    <class>model.animal.Nome</class>
    <class>model.animal.EcdiseAmphibia</class>
    <class>model.animal.EcdiseReptilia</class>
    <class>model.animal.Reptilia</class>
    <class>model.usuario.Administrador</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/Sisnat"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.password" value="admin"/>
      <!-- EclipseLink should create the database schema automatically -->
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <!-- property name="eclipselink.ddl-generation" value="create-or-extend-tables"/ -->
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
      <!--property name="eclipselink.cache.shared.default" value="false"/-->
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
